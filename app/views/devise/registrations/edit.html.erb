
<div class="login-area">
  <%= image_tag "logo-3491390_1920.svg", class: "log-in-logo"%>
  <h2>Update Profile</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>
    

    <div class="form-inputs">     


      <div class="input_log email required user_email">         
        <input placeholder="Email" autocomplete="email" class="log-bar string email required" required="required" aria-required="true" type="email" value="" name="user[email]" id="user_email">
      </div>           
      
      <div class="input_log password required user_password field_with_hint">           
          <input placeholder="Password" autocomplete="new-password" class="log-bar password required" required="required" aria-required="true" type="password" name="user[password]" id="user_password">            
      </div>

      <div class="input_log password required user_password_confirmation">
          <input placeholder="Password Confirmation" autocomplete="new-password" class="log-bar password required" required="required" aria-required="true" type="password" name="user[password_confirmation]" id="user_password_confirmation">
      </div>

      <div class="input_log password required current_user_password">
          <input placeholder="Current Password" autocomplete="current-password" class="log-bar password required" required="required" aria-required="true" type="password" name="user[current_password]" id="current_user_password">
      </div>

      <div class="avatar_field">
          <label class="avatar_label" for="user_avatar">Set your Avatar:</label>
          <%= f.file_field :avatar %>
      </div>

    </div>

    <div class="form-actions-log">
      <%= f.button :submit, "Update", class: "btn" %>
     
      <%= link_to "Cancel my account", registration_path(resource_name), data: { "turbo-method": :delete, confirm: "Are you sure?"} %>
      <%= link_to "Back", :back %>

    </div>

  <% end %>
  
</div>
