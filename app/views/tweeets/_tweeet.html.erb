  <div class="post">
      
      <div class="post-top">
          <%= image_tag "1607363622_58434.jpeg", class: "profile-pic" %>                                    
          <h2 class="username"><%= tweeet.user.name %></h2>
          <span class="post_id">@<%= tweeet.user.username %></span><br>
      </div>  


      <div class="post-mid">
          <p class="comment"><%= tweeet.tweeet %></p>  
      </div>

      <% if user_signed_in? %>
        <div class="post-bot">
          
            <div class="comm-icon-link">

              <%= form_with(url: likes_path, method: "post", class: "comm-icon") do%>
                <input type="hidden" name="like[tweeet_id]" value="<%= tweeet.id%>" autocomplete="off">
                <%= image_submit_tag("favorite_border_black_24dp.svg")%>
              <% end%>

            </div>            
                    
            <span class="comm-count"><%= tweeet.likes.count%></span>
          
            <%= link_to tweeet, class: "view-icon-link"  do%>
              <%= image_tag "visibility_black_24dp.svg", class: "view-icon" %>  
            <% end %>              
        </div>
      <% else %>
        <div class="post-bot">
            <%= image_tag "favorite_border_black_24dp.svg", class: "comm-icon" %>                    
            <span class="comm-count">5</span>
        </div>
      <% end %> 


  </div>